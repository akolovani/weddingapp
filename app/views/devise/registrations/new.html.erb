<body class = "body2">
<div class = "cover">
<center><h2 id = "logo">-------- &nbsp;Tying the Knot&nbsp; --------</h2></center>
<div class = "grid">
  <div class = "grid_col-6">
<h2 class = "color-change">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email, :class => "color-change" %><br />
    <%= f.email_field :email, autofocus: true, :class => "form__input1" %>
  </div>

  <div class="field">
    <%= f.label :password, :class => "color-change" %>
    <% if @validatable %>
    <em class = "color-change">(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", :class => "form__input1" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, :class => "color-change" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", :class => "form__input1" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", :class => "sub-button" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
<div class = "grid_col-6"><br><br><br>
  <%= image_tag("wedding.png", :class => "wedding") %> 
</div>
</div>
</div>
</body>
